import java.util.Scanner;
class Main{
    public static void main(String args[])
    {
        int n,sum=0;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the number is ");
        n=sc.nextInt();
        while(n>0)
        {
            sum=sum+n%10;
            n=n/10;
        }
        System.out.println("Sum of digit of a number is "+sum);
    }
}
